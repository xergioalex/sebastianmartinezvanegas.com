---
import Footer from '../components/footer.astro';
import Header from '../components/header.astro';
import GoogleAnalytics from '../components/google-analytics.astro';
let { title, description, keywords } = Astro.props;
import '../styles/global.css';

if (!title) {
  title = 'Sebastián Martínez Vanegas';
}

if (!description) {
  description = 'Autor de Tener un cuerpo es mala poesía  y de Coordenadas de un plano irrealizable';
}

if (!keywords) {
  keywords =
    'Sebastián Martínez Vanegas, Tener un cuerpo es mala poesía, Coordenadas de un plano irrealizable, Escritor, Poeta, Poesía, Poesía colombiana, Colombia, Premio Emilio Prado, Premio de Poesía Joven, Pre-Textos,Editorial Pretextos';
}
---

<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Used to add dark mode right away, adding here prevents any flicker -->
    <!-- <script is:inline>
      if (typeof Storage !== 'undefined') {
        if (localStorage.getItem('dark_mode') && localStorage.getItem('dark_mode') == 'true') {
          document.documentElement.classList.add('dark');
        }
      }
    </script> -->

    <style>
      .prose img {
        border-radius: 20px;
      }
    </style>
    <link rel="icon" type="image/x-icon" href="../faviconref.png" />
    <script src="../assets/css/main.css"></script>
    <Fragment set:html={import.meta.env.HEADER_INJECT} />
    <GoogleAnalytics />
  </head>
  <body class="antialiased dark:bg-neutral-950 bg-cream">
    <Header />
    <slot />
    <Footer />
    <script src="../assets/js/main.js"></script>
    <Fragment set:html={import.meta.env.FOOTER_INJECT} />
  </body>
</html>
